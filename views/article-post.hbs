<!DOCTYPE html>
<html>
<head>
  <title> dysPHoria | {{article.title}} </title>
  <script src="/js/article-post.js" type="text/javascript"></script>
</head>
<body>
  {{> header}}
  <div id="container">

    <ul class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li><a href="/article/list">Articles</a></li>
      <li>{{article.title}}</li>
    </ul> <br>

    <div id="main-post">
      <h1 class="subheader" id="article-title">{{article.title}}</h1>
      <h4>by {{article.author}}</h4>
    </div><hr><br>
    
    <div class="body">
      <div id="img">
        <img src="{{article.imgpath}}">
      </div>
      <h4>{{article.imgsrc}}</h4><br>
      <p></p>
      {{#each article.content}}
        <p>{{this}}</p><br>
      {{/each}}
      <h3>References</h3>
      {{#each article.references}}
        <h5>{{this}}</h5>
      {{/each}}
    </div><br>
  </div><br>

  <div id="container">
    <div id="poll">
      <h3>POLL: {{poll.question}}</h3><br><hr class="line-light"><br>
      
      <div id="buttons">
        {{#if notloggedin}}
          <p>{{notloggedin}}</p>
        {{else if answered}}
          <p>{{answered}}</p>
        {{else}}
          <button class="btn" type="submit" id="yesbtn" name="yesbtn">Yes</button>
          <button class="btn" type="submit" id="nobtn" name="nobtn">No</button>
        {{/if}}
      </div><br><hr class="line-light">

      <div id="poll-bars">
        <h3>Results</h3>
        <div>
          <span class="yes" style="width: {{yespercent}}%">Yes - {{yespercent}}%</span>
          <span class="no" style="width: {{nopercent}}%">No - {{nopercent}}%</span>
        </div>
        <h4>Total Votes: {{polltotal}}</h4>
      </div>
    </div>
  </div><br>

  <div id="container">
    <div id="comments">
      <h2 class="subsubheader">Comments:</h2>
      <div id="comment-list">
        {{> comment}}<hr class="line-light">
      </div><br>
      {{#if notloggedin}}
        <p>Sign up or log in to leave a comment!</p>
      {{else}}
        <h3 class="subsubheader">Write a new comment:</h2><br>
        <textarea class="comment-box" placeholder="Type your comment here."></textarea>
      {{/if}}
    </div>
  </div>
  {{> footer}}
</body>
</html>
