<html>
<head>
  <title> dysPHoria | Your Profile </title>
  <link href="/css/profile.css" rel="stylesheet">
  <link href="/css/article.css" rel="stylesheet">
  <link href="/css/auth.css" rel="stylesheet">
  <script src="/js/profile-edit.js" type="text/javascript"></script>
  <script src="/js/validator.min.js" type="text/javascript"></script>
</head>
<body>
  {{> header}}
  <div id="container">

    <ul class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li>Your Profile</li>
    </ul>

    <div id="profilecontents"><br>
      <h1>@{{user.username}}</h1>
      <p>{{user.email}}</p><br><br>
    </div>

  </div><br>

  <div id="container">

    <div id="comments">
      <h2 class="subsubheader">Your Comments:</h2>
        <div id="comment-list">
          {{#each comments}}
            {{> comment-profile}}<hr class="line-light">
          {{else}}
            <p>You have not commented on any post yet.</p><br>
          {{/each}}
        </div><br>
      </div>
    </div>

  </div><br>

  <div id="container">

    <div id="profilecontents"><br>
      <h2>Edit Your Details</h2>
      <h3>Enter your old password to change your details. Blank fields will remain the same.</h3>

      <div id="errors">
        <h6 id="error" class="error">{{error}}</h6>
        <h6 id="usernameError" class = "error">{{usernameError}}</h6>
        <h6 id="emailError" class = "error">{{emailError}}</h6>
        <h6 id="new_passwordError" class = "error">{{new_passwordError}}</h6>
        <h6 id="edit_passwordError" class = "error">{{edit_passwordError}}</h6>
      </div>

      <form class="form" method="post" action="/editprofile">
        <input class="input" type="text" placeholder="New Username" id="username" name="username"><br>
        <input class="input" type="email" placeholder="New Email" id="email" name="email"><br>
        <input class="input" type="password" placeholder="New Password" id="new_password" name="new_password"><br>
        <input class="input" type="password" placeholder="Confirm your Password" id="edit_password" name="edit_password" required><br><br>
        <input class="btn editbtn" type="submit" value="Edit" id="editbtn" name="editbtn">
      </form><br>
    </div>

  </div><br>

  <div id="container">

    <div id="profilecontents"><br>
      <h2>Delete Your Account</h2>
      <h3>Enter your password twice to delete your account.</h3>

      <div id="errors">
        <h6 id="error" class="error">{{error}}</h6>
        <h6 id="delete_passwordError" class = "error">{{delete_passwordError}}</h6>
        <h6 id="c_passwordError" class = "error">{{c_passwordError}}</h6>
      </div>

      <form class="form" method="post" action="/delprofile">
        <input class="input" type="password" placeholder="Password" name="delete_password" id="delete_password" required=""><br>
        <input class="input" type="password" placeholder="Confirm your Password" name="c_password" id="c_password" required><br><br>
        <input class="btn delbutton" type="submit" value="Delete" id="delbutton" name="delbutton">
      </form><br>
    </div>

  </div><br>
  
  {{> footer}}
</body>
</html>